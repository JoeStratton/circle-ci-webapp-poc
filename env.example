# Environment Variables for CircleCI Demo Application
# Copy this file to .env and update with your actual values
# These should be implemented within CircleCI

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=1
PORT=5000

# Database Configuration
DATABASE_URL=postgresql://testuser:testpass@localhost:5432/testdb

# AWS Configuration (for production deployment)
AWS_DEFAULT_REGION=us-east-1
AWS_ROLE_ARN=arn:aws:iam::123456789012:role/CircleCIDemoRole

# ECR Configuration
ECR_REPOSITORY=circleci-demo-app
AWS_ECR_ACCOUNT_URL=123456789012.dkr.ecr.us-east-1.amazonaws.com

# ECS Configuration
ECS_CLUSTER=circleci-demo-cluster
ECS_SERVICE=circleci-demo-service
TASK_DEFINITION=circleci-demo-task

# S3 Configuration
S3_BUCKET=circleci-demo-artifacts

# CircleCI Configuration (set in CircleCI contexts)
CIRCLE_BRANCH=main
CIRCLE_SHA1=abc123
CIRCLE_BUILD_NUM=1
CIRCLE_USERNAME=developer
